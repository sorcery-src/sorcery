// prettier-ignore
{
	"compilerOptions": {
		"target": "es2017",                   // Changed from `"es5"`
		"module": "commonjs",
		"lib": ["dom", "esnext"],             // Added
		"jsx": "react",                       // Added
		"declaration": true,                  // Added
		"declarationMap": true,               // Added
		"sourceMap": true,                    // Added
		"outDir": "./dist",                   // Added
		"rootDir": "./src",                   // Added
		"removeComments": true,               // Added
		"strict": true,
		"noImplicitAny": true,                // Added
		"strictNullChecks": true,             // Added
		"strictFunctionTypes": true,          // Added
		"strictBindCallApply": true,          // Added
		"strictPropertyInitialization": true, // Added
		"noImplicitThis": true,               // Added
		"alwaysStrict": true,                 // Added
		"noUnusedLocals": true,               // Added
		"noUnusedParameters": true,           // Added
		"noImplicitReturns": true,            // Added
		"noFallthroughCasesInSwitch": true,   // Added
		"baseUrl": "./",                      // Added
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/jest.setupFile.ts",
	],
	"exclude": [
		"src/**/*.test.ts",
		"src/**/*.test.tsx",
		"src/**/jest.setupFile.ts",
	]
}
